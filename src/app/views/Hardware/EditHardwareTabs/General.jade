h3.page-header General
.row
	.col-xs-6
		.form-hardware( ng-class="{ 'has-error': form.name.$invalid }")
			label Name
			input.form-control(type="text" name="name" placeholder="Name" ng-model="vm.hardware.Name" required)
		.form-hardware
			label Category
			select.form-control(ng-model="vm.hardware.CategoryId" ng-options="condition.Id as condition.Name for condition in vm.categories")
		.checkbox
			label 
				input(type="checkbox" ng-model="vm.hardware.Vpro")
			span Vpro
	.col-xs-6
		.form-hardware
			label Description
			textarea.form-control(type="text" cols="50", rows="12", ng-model="vm.hardware.Description")
