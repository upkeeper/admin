include ../Shared/Searchbar.jade
.row
    label.total_items Showing {{app.limit.limit}} of total {{vm.tasks.length}}
.row
    table.table.table-hover.table-striped
        thead
            tr
                th Name
                th Description
                th Function Type
                th Schema Type
        tbody
            tr(dir-paginate="task in vm.tasks | filter:vm.searchvalue | itemsPerPage:app.limit.limit")
                td(ng-click="vm.editTask(task)") {{task.Name}}
                td {{task.Description}}
                td {{task.FunctionTypeName}}
                td {{task.SchemaTypeName}}
pagination-bar(create-permission="'Task_Create_Edit'" create-item="vm.create()")