.row
	div(role="tabpanel")
		ul.nav.nav-tabs(role="tablist")
			li.active(role="presentation")
				a(data-target="#general" aria-controls="home" role="tab" data-toggle="tab") General
			li(role="presentation")
				a(data-target="#messages" aria-controls="home" role="tab" data-toggle="tab") Messages
.row
	form(name="form" novalidate ng-submit="vm.save()")
		.tab-content
			.tab-pane.fade.in.active#general
				include ../BatchJobs/Tabs/General.jade
				save-button(delete-permission="'BatchJob_Delete'" delete-item="vm.delete()")
			.tab-pane.fade#messages
				include ../BatchJobs/Tabs/Messages.jade