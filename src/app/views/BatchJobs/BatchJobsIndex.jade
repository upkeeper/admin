include ../Shared/Searchbar.jade
.row
    table.table.table-hover.table-striped
        thead
            tr
                th Name
                th Verified
                th Scheduled
                th Executed
                th Username
                th Computers
                th Warnings
                th Create Computer
        tbody
            tr(dir-paginate="batchjob in vm.batchJobs | filter:vm.searchvalue | itemsPerPage:app.limit.limit")
                td(ng-click="vm.editBatchjob(batchjob)") {{batchjob.Name}}
                td(ng-click="vm.editBatchjob(batchjob)") {{batchjob.Verified | date:'yyyy-MM-dd hh:mm:ss'}} 
                td(ng-click="vm.editBatchjob(batchjob)") {{batchjob.Scheduled | date:'yyyy-MM-dd'}}
                td(ng-click="vm.editBatchjob(batchjob)") {{batchjob.Executed | date:'yyyy-MM-dd'}}
                td(ng-click="vm.editBatchjob(batchjob)") {{batchjob.Username}}
                td {{batchjob.Computers}}
                td {{batchjob.Warnings}}
                td
                    i.fa.fa-check(ng-show="batchjob.CreateComputer")
                    i.fa.fa-minus(ng-show="!batchjob.CreateComputer")
pagination-bar(create-permission="'BatchJob_Create_Edit'" create-item="vm.create()")