.modal.fade#computerMergedSettings(tabindex="-1" role="dialog" aria-labelledby="myModalLabel")
	.modal-dialog(role="document")
		.modal-content
			form#dlgForm.computerInventory
				.modal-header
					button.close(type="button" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true")
					h4.modal-title#gridSystemModalLabel Settings for {{vm.computer.Name}}
				.modal-body
					section(ng-controller="CodemirrorController")
						div(ui-codemirror="editorOptions" ng-model="vm.mergedSettings")
				.modal-footer
					.modal-footer-buttons
						button.btn.btn-primary(data-dismiss="modal") Close