.row
    div(role="tabpanel")
        ul.nav.nav-tabs(role="tablist")
                li.active(role="presentation")
                    a(data-target="#general" aria-controls="home" role="tab" data-toggle="tab") General
                li(role="presentation")
                    a(data-target="#smb" aria-controls="home" role="tab" data-toggle="tab") SMB
                li(role="presentation")
                    a(data-target="#http" aria-controls="home" role="tab" data-toggle="tab") HTTP
.row
    form(name="form" novalidate  ng-submit="vm.save()")
        .tab-content
            .tab-pane.fade.in.active#general
                include ../DistributionPoints/EditDistributionTabs/General.jade
                save-button(delete-permission="'Platform_Delete'" delete-item="vm.delete()")
            .tab-pane.fade#smb
                include ../DistributionPoints/EditDistributionTabs/SMB.jade
                save-button(delete-permission="'Platform_Delete'" delete-item="vm.delete()")
            .tab-pane.fade#http
                include ../DistributionPoints/EditDistributionTabs/HTTP.jade
                save-button(delete-permission="'Platform_Delete'" delete-item="vm.delete()")