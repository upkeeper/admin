include ../Shared/Searchbar.jade
.row
    label.total_items
        span(ng-show="app.limit.limit < vm.distributions.length ") Showing {{app.limit.limit}} of total {{vm.distributions.length}}
        span(ng-show="app.limit.limit >= vm.distributions.length ") Showing {{vm.distributions.length}} of total {{vm.distributions.length}}
.row
    table.table.table-hover.table-striped
        thead
            tr
                th Name
                th Location
                th Description
                th SMB
                th HTTP
                th Default
                th Active
        tbody
            tr(dir-paginate="distribution in vm.distributions | filter:vm.searchvalue | itemsPerPage:app.limit.limit")
                td(ng-click="vm.editDistribution(distribution)") {{distribution.Name}}
                td {{distribution.Location}}
                td {{distribution.Description}}
                td
                    i.fa.fa-check(ng-show="distribution.SMB")
                    i.fa.fa-minus(ng-show="!distribution.SMB")
                td
                    i.fa.fa-check(ng-show="distribution.HTTP")
                    i.fa.fa-minus(ng-show="!distribution.HTTP")
                td
                    i.fa.fa-check(ng-show="distribution.Default")
                    i.fa.fa-minus(ng-show="!distribution.Default")
                td
                    i.fa.fa-check(ng-show="distribution.Active")
                    i.fa.fa-minus(ng-show="!distribution.Active")
pagination-bar(create-permission="'DistributionPoint_Create_Edit'" create-item="vm.create()")