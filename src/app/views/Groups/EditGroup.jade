.row
    div(role="tabpanel")
        ul.nav.nav-tabs(role="tablist")
            li.active(role="presentation")
                a(data-target="#general" aria-controls="home" role="tab" data-toggle="tab") General
            li(role="presentation")
                a(data-target="#advanced" aria-controls="home" role="tab" data-toggle="tab") Advanced
            li(role="presentation" ng-show="app.HasPermission('Group_Manage_Applications')")
                a(data-target="#applications" aria-controls="home" role="tab" data-toggle="tab") Applications
            li(role="presentation" ng-show="app.HasPermission('Group_Manage_Computers')")
                a(data-target="#computers" aria-controls="home" role="tab" data-toggle="tab") Computers
            li(role="presentation" ng-show="app.HasPermission('Group_Manage_Tasks')")
                a(data-target="#tasks" aria-controls="home" role="tab" data-toggle="tab") Tasks
            li(role="presentation")
                a(data-target="#settings" aria-controls="home" role="tab" data-toggle="tab" ng-click="vm.initSettings()") Settings
.row
    form(name="form" novalidate  ng-submit="vm.save()")
        .tab-content
            .tab-pane.fade.in.active#general
                include ../Groups/EditGroupTabs/General.jade
                save-button(delete-permission="'Group_Delete'" delete-item="vm.delete()")
            .tab-pane.fade#advanced
                include ../Groups/EditGroupTabs/Advanced.jade
                save-button(delete-permission="'Group_Delete'" delete-item="vm.delete()")
            .tab-pane.fade#applications
                include ../Shared/Sections/GroupApplications.jade
            .tab-pane.fade#computers
                include ../Shared/Sections/Computers.jade
            .tab-pane.fade#tasks
                include ../Shared/Sections/Tasks.jade
            .tab-pane.fade#settings
                include ../Shared/Sections/Settings.jade