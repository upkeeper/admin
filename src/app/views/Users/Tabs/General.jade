h3.page-header General
.row
    .col-xs-6
        .form-group
            label Fullname
            input.form-control(type="text" name="name" placeholder="" ng-model="vm.user.Name")
        .form-group( ng-class="{ 'has-error': form.name.$invalid }")
            label Name
            input.form-control(type="text" name="name" placeholder="" ng-model="vm.user.UserName")
        .form-group
            label Email
            input.form-control(type="text" name="name" placeholder="" ng-model="vm.user.Email")
        .form-group
            label Phone
            input.form-control(type="text" name="phone" placeholder="" ng-model="vm.user.TelephoneNumber")
    .col-xs-6
        .form-group
            label Description
            textarea.form-control(type="text" cols="50", rows="12", ng-model="vm.user.Description")
