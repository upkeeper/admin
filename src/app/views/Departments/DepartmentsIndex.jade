include ../Shared/Searchbar.jade
.row
    table.table.table-hover.table-striped
        thead
            tr
                th Name
                th Description
                th Number of Computers
                th Number of Users
        tbody
            tr(dir-paginate="department in vm.departments | filter:vm.searchvalue | itemsPerPage:app.limit.limit")
                td(ng-click="vm.editdepartment(department)") {{department.Name}}
                td(ng-click="vm.editdepartment(department)") {{department.Description}}
                td(ng-click="vm.editdepartment(department)") {{department.NumComputers}}
                td(ng-click="vm.editdepartment(department)") {{department.NumUsers}}
pagination-bar(create-permission="'Department_Create_Edit'" create-item="vm.create()")